<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66FF9800"
        android:gravity="center"
        android:padding="10dp"
        android:text="Memory"
        android:textSize="30sp" />

    <GridLayout
        android:id="@+id/gameGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="4"
        android:rowCount="4">

        <ImageButton
            android:id="@+id/card1IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="1" />

        <ImageButton
            android:id="@+id/card2IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="2" />

        <ImageButton
            android:id="@+id/card3IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="3" />

        <ImageButton
            android:id="@+id/card4IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="4" />

        <ImageButton
            android:id="@+id/card5IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="5" />

        <ImageButton
            android:id="@+id/card6IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="6" />

        <ImageButton
            android:id="@+id/card7IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="7" />

        <ImageButton
            android:id="@+id/card8IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="8" />

        <ImageButton
            android:id="@+id/card9IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="9" />

        <ImageButton
            android:id="@+id/card10IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="10" />

        <ImageButton
            android:id="@+id/card11IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="11" />

        <ImageButton
            android:id="@+id/card12IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="12" />

        <ImageButton
            android:id="@+id/card13IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="13" />

        <ImageButton
            android:id="@+id/card14IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="14" />

        <ImageButton
            android:id="@+id/card15IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="15" />

        <ImageButton
            android:id="@+id/card16IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:tag="16" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/attemptsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameGL"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentativi: "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/attemptsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp" />

    </LinearLayout>

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Reset"
        android:textColor="@color/black"
        android:textSize="25sp" />

</RelativeLayout>